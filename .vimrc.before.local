" Source the local before vimrc file after saving
if has("autocmd")
  autocmd bufwritepost .vimrc.before.local source ~/.vimrc.before.local
endif

" Select the default plugin categories to install
let g:spf13_bundle_groups = ['general', 'writing', 'programming', 'neocomplete', 'python', 'javascript', 'haskell', 'html', 'ruby', 'go', 'elixir', 'misc']

" Enable powerline symbols
let g:airline_powerline_fonts = 1

